@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix year: <http://example.org/year#> .
year:Year rdf:type owl:Class ;
          rdfs:comment "A class to represent a year." .
year:hasMonth rdf:type owl:ObjectProperty ;
               rdfs:comment "A property that links a year with its months." ;
               rdfs:domain year:Year ;
               rdfs:range year:Month .
year:Month rdf:type owl:Class ;
           rdfs:comment "A class to represent a month in a year." .
year:hasDays rdf:type owl:DatatypeProperty ;
              rdfs:comment "A property that shows the number of days in a month." ;
              rdfs:domain year:Month ;
              rdfs:range xsd:int .
year:hasLeapYear rdf:type owl:DatatypeProperty ;
              rdfs:comment "A property that states if a year is a leap year." ;
              rdfs:domain year:Year ;
              rdfs:range xsd:boolean .
year:Year2000 rdf:type year:Year ;
               year:hasLeapYear "true"^^xsd:boolean .
            year:2000January rdf:type year:Month ;
                  year:hasDays "31"^^xsd:int ;
                  rdf:subject year:Year2000 ;
                  rdf:predicate year:hasMonth ;
                  rdf:object year:2000January .
