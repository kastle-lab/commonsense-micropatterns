@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix day: <http://example.org/day#> .
day:Day a rdfs:Class ;
    rdfs:comment "Represents a day in a week" ;
    rdfs:label "Day" .
day:hasName a rdf:Property ;
    rdfs:comment "The name of the day" ;
    rdfs:label "has name" ;
    rdfs:range xsd:string ;
    rdfs:domain day:Day .
day:hasOrder a rdf:Property ;
    rdfs:comment "The order of the day in the week" ;
    rdfs:label "has order" ;
    rdfs:range xsd:integer ;
    rdfs:domain day:Day .
day:Monday a day:Day ;
    day:hasName "Monday" ;
    day:hasOrder 1 .
day:Tuesday a day:Day ;
    day:hasName "Tuesday" ;
    day:hasOrder 2 .
