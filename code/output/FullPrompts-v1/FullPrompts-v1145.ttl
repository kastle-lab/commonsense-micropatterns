@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://example.org/> .
ex:Day a rdfs:Class ;
  rdfs:comment "A class representing the concept of a day" .
ex:hasDayOfWeek a rdf:Property ;
  rdfs:domain ex:Day ;
  rdfs:range xsd:string ;
  rdfs:comment "Property linking a day to its day of week" .
ex:hasDate a rdf:Property ;
  rdfs:domain ex:Day ;
  rdfs:range xsd:date ;
  rdfs:comment "Property linking a day to its specific date" .
ex:day1 a ex:Day ;
  ex:hasDayOfWeek "Monday"^^xsd:string ;
  ex:hasDate "2022-05-30"^^xsd:date .
