@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix day: <http://www.example.org/day#> .
day:Day rdf:type rdfs:Class ;
  rdfs:label "Day" ;
  rdfs:comment "A day is a unit of time. In common usage, it is an interval equal to 24 hours." .
day:hasDate rdf:type rdf:Property ;
  rdfs:label "has date" ;
  rdfs:comment "The Gregorian calendar date of the day." ;
  rdfs:range xsd:date ;
  rdfs:domain day:Day .
day:hasDayOfWeek rdf:type rdf:Property ;
  rdfs:label "has day of week" ;
  rdfs:comment "The day of the week of the day, e.g. Monday, Tuesday, etc." ;
  rdfs:range rdfs:Literal ;
  rdfs:domain day:Day .
day:hasPart rdf:type rdf:Property ;
  rdfs:label "has part" ;
  rdfs:comment "Connects the day with its parts, e.g. morning, afternoon, evening, night." ;
  rdfs:range rdf:resource ;
  rdfs:domain day:Day .
day:Morning rdf:type rdfs:Class ;
  rdfs:label "Morning" ;
  rdfs:comment "The period of time from sunrise to noon." ;
  rdfs:subClassOf day:Day .
day:Afternoon rdf:type rdfs:Class ;
  rdfs:label "Afternoon" ;
  rdfs:comment "The period of time from noon to evening." ;
  rdfs:subClassOf day:Day .
day:Evening rdf:type rdfs:Class ;
  rdfs:label "Evening" ;
  rdfs:comment "The period of time from the end of the afternoon to bedtime." ;
  rdfs:subClassOf day:Day .
day:Night rdf:type rdfs:Class ;
  rdfs:label "Night" ;
  rdfs:comment "The period of time from sunset to sunrise." ;
  rdfs:subClassOf day:Day .
