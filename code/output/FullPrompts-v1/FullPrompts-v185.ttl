@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix way_ontology: <http://www.example.org/way_ontology#> .
way_ontology:Way rdf:type rdfs:Class ;
  rdfs:comment "A class depicting a road, path, or direction."@en .
way_ontology:Road rdf:type rdfs:Class ;
  rdfs:subClassOf way_ontology:Way ;
  rdfs:comment "A type of way specifically for vehicular travel."@en .
way_ontology:Path rdf:type rdfs:Class ;
  rdfs:subClassOf way_ontology:Way ;
  rdfs:comment "A type of way often used for walking or biking."@en .
way_ontology:Direction rdf:type rdfs:Class ;
  rdfs:subClassOf way_ontology:Way ;
  rdfs:comment "A type of way indicating the route or course to be taken."@en .
way_ontology:length rdf:type rdf:Property ;
  rdfs:domain way_ontology:Way ;
  rdfs:range xsd:float ;
  rdfs:comment "The length of the way, in kilometers."@en .
way_ontology:hasSurfaceType rdf:type rdf:Property ;
  rdfs:domain way_ontology:Way ;
  rdfs:range rdfs:Literal ;
  rdfs:comment "Specifies the surface type of the way (asphalt, gravel, etc.)."@en .
way_ontology:isUsedBy rdf:type rdf:Property ;
  rdfs:domain way_ontology:Way ;
  rdfs:range way_ontology:UsageType ;
  rdfs:comment "Indicates the typical usage of the way (vehicles, pedestrians, cyclists, etc.)."@en .
way_ontology:UsageType rdf:type rdfs:Class ;
  rdfs:comment "A class indicating how a way is typically used."@en .
