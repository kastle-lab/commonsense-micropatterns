@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix owl: <http://www.w3.org/2002/07/owl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix time: <http://www.example.com/time#> .
# Basic ontology definitiontime:     a owl:Ontology ;
    rdfs:comment "Ontology of the Time concept"@en ;
    rdfs:label "TimeOntology"@en .
# Time concept and its propertiestime:Time     a rdfs:Class ;
    rdfs:comment "The concept of time"@en ;
    rdfs:label "Time" .
time:hasSecond    a rdf:Property ;
    rdfs:domain time:Time ;
    rdfs:range xsd:integer ;
    rdfs:comment "The seconds part of a time"@en ;
    rdfs:label "has second" .
time:hasMinute    a rdf:Property ;
    rdfs:domain time:Time ;
    rdfs:range xsd:integer ;
    rdfs:comment "The minutes part of a time"@en ;
    rdfs:label "has minute" .
time:hasHour    a rdf:Property ;
    rdfs:domain time:Time ;
    rdfs:range xsd:integer ;
    rdfs:comment "The hour part of a time"@en ;
    rdfs:label "has hour" .
# Date & its propertiestime:Date     a rdfs:Class ;
    rdfs:comment "The concept of date"@en ;
    rdfs:label "Date" .
time:hasDay    a rdf:Property ;
    rdfs:domain time:Date ;
    rdfs:range xsd:integer ;
    rdfs:comment "The day part of a date"@en ;
    rdfs:label "has day" .
time:hasMonth    a rdf:Property ;
    rdfs:domain time:Date ;
    rdfs:range xsd:integer ;
    rdfs:comment "The month part of a date"@en ;
    rdfs:label "has month" .
time:hasYear    a rdf:Property ;
    rdfs:domain time:Date ;
    rdfs:range xsd:integer ;
    rdfs:comment "The year part of a date"@en ;
    rdfs:label "has year" .
# DateTime concept - combination of Date & Timetime:DateTime     a rdfs:Class ;
    rdfs:subClassOf time:Date, time:Time ;
    rdfs:comment "The concept of date and time"@en ;
    rdfs:label "DateTime" .
# Time Zone & its propertiestime:TimeZone    a rdfs:Class ;
    rdfs:comment "The concept of time zone"@en ;
    rdfs:label "TimeZone" .
time:hasOffset    a rdf:Property ;
    rdfs:domain time:TimeZone ;
    rdfs:range xsd:integer ;
    rdfs:comment "The offset part of a time zone"@en ;
    rdfs:label "has offset" .
time:isInDateTime    a rdf:Property ;
    rdfs:domain time:TimeZone ;
    rdfs:range time:DateTime ;
    rdfs:comment "Specifies that a time zone is part of a DateTime"@en ;
    rdfs:label "is in DateTime" .
